        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btRaiz"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="65dp"
        android:text="&#8730;"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/bt7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="65dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/bt8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btRaiz"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="125dp"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/bt6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt4"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="125dp"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@+id/btMultiplicacao"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt5"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btMultiplicacao"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="125dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt6"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="125dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/bt5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btCos"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btCos"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="125dp"
        android:text="cos"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/bt4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btCalculadoraParetesEsq"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="("
        app:layout_constraintEnd_toStartOf="@+id/btCalculadoraParentesDir"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btLog"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btLimpar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btCalculadoraParentesDir"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btCalculadoraParentesDir"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text=")"
        app:layout_constraintEnd_toStartOf="@+id/btLimpar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btCalculadoraParetesEsq"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btPotencia"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="^"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btLog"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btLog"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="log"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btCalculadoraParetesEsq"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btPotencia"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/bt3"
