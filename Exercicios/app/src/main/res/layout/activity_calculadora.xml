<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraActivity">

    <TextView
        android:id="@+id/txtTela"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/txtEntrada"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0.0"
        app:layout_constraintTop_toBottomOf="@+id/txtTela"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/btIgual"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="44dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/btMaisMenos"
        app:layout_constraintEnd_toStartOf="@+id/bt2" />

    <Button
        android:id="@+id/btSoma"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="40dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/btIgual"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintEnd_toStartOf="@+id/bt5" />

    <Button
        android:id="@+id/btPonto"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="44dp"
        android:text=","
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btIgual" />

    <Button
        android:id="@+id/btPotencia"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:text="x^y"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@+id/bt9"
        app:layout_constraintEnd_toStartOf="@+id/btDivisao"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/btLimpar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/btX2"
        app:layout_constraintEnd_toStartOf="@+id/btLog"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/bt4"
        app:layout_constraintEnd_toStartOf="@+id/bt8" />

    <Button
        android:id="@+id/btPi"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="44dp"
        android:text="Pi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btMaisMenos" />

    <Button
        android:id="@+id/btDivX"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:text="1/x"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@+id/btE"
        app:layout_constraintEnd_toStartOf="@+id/bt4" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/bt6"
        app:layout_constraintEnd_toStartOf="@+id/btMultiplicacao" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/bt3"
        app:layout_constraintEnd_toStartOf="@+id/btSubtracao" />

    <Button
        android:id="@+id/btSubtracao"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/btSoma"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/bt5"
        app:layout_constraintEnd_toStartOf="@+id/bt9" />

    <Button
        android:id="@+id/btX2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:text="x^2"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/btDivX"
        app:layout_constraintEnd_toStartOf="@+id/bt7" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/bt2"
        app:layout_constraintEnd_toStartOf="@+id/bt6" />

    <Button
        android:id="@+id/btE"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:text="e"
        app:layout_constraintBottom_toTopOf="@+id/btPi"
        app:layout_constraintEnd_toStartOf="@+id/bt1" />

    <Button
        android:id="@+id/btDivisao"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="40dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/btMultiplicacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/btPorcentagem"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:text="%"
        app:layout_constraintBottom_toTopOf="@+id/bt8"
        app:layout_constraintEnd_toStartOf="@+id/btPotencia"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/btPonto"
        app:layout_constraintEnd_toStartOf="@+id/btSoma" />

    <Button
        android:id="@+id/btMultiplicacao"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="4dp"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@+id/btSubtracao"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/bt0"
        app:layout_constraintEnd_toStartOf="@+id/bt3" />

    <Button
        android:id="@+id/btLog"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:text="log"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bt7"
        app:layout_constraintEnd_toStartOf="@+id/btPorcentagem"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/btMaisMenos"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="44dp"
        android:text="+/-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt0" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="44dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btPonto" />

    <Button
        android:id="@+id/btVoltarCalculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>