        app:layout_constraintEnd_toStartOf="@+id/btSubtracao"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt2"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="185dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/bt2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btSen"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btSen"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="185dp"
        android:text="Sen"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/bt1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btSubtracao"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="185dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt3"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="185dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/bt3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt1"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="245dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/btPonto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btPorcentagem"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btPorcentagem"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="245dp"
        android:text="%"
        app:layout_constraintEnd_toStartOf="@+id/bt0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btTan"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btSoma"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="245dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btPonto"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btPonto"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="245dp"
        android:text=","
        app:layout_constraintEnd_toStartOf="@+id/btSoma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt0"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btTan"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="245dp"
        android:text="tan"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btPorcentagem"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btIgual"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_marginTop="305dp"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btLimpaHistorico"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <Button
        android:id="@+id/btLimpaHistorico"
        android:layout_width="124dp"
        android:layout_height="55dp"
        android:layout_marginTop="305dp"
        android:text="Limpar HistÃ³rico"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btIgual"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEntrada" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>