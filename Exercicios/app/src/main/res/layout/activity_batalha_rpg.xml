<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BatalhaRPGActivity">

    <TextView
        android:id="@+id/txtBatalhaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="The last Battle RPG"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtBatalhaNome"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:ems="10"
        android:hint="Nome:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtBatalhaCriar"
        app:layout_constraintStart_toEndOf="@+id/txtBatalhaCriar"
        app:layout_constraintTop_toTopOf="@+id/txtBatalhaCriar" />

    <EditText
        android:id="@+id/txtBatalhaForca"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Força"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/txtBatalhaDefesa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtBatalhaVida"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <EditText
        android:id="@+id/txtBatalhaDefesa"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Defesa"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/txtBatalhaDestreza"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtBatalhaForca"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <EditText
        android:id="@+id/txtBatalhaVida"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Vida"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/txtBatalhaForca"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <EditText
        android:id="@+id/txtBatalhaDestreza"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Destreza"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtBatalhaDefesa"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <TextView
        android:id="@+id/txtBatalhaCriar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Crie seu guerreiro:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <TextView
        android:id="@+id/txtBatalhaMonte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Monte as habilidades do seu Guerreiro: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaCriar" />

    <TextView
        android:id="@+id/txtBatalhaDistribua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Distribua 100 pontos dentre os campos abaixo."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaMonte" />

    <TextView
        android:id="@+id/txtBatalhaEscolha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:text="Escolha seu oponente:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <ProgressBar
        android:id="@+id/barGuerreiro2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaGuerreiro1" />

    <CheckBox
        android:id="@+id/boxBatalhaAtila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:checked="false"
        android:text="Átila"
        app:layout_constraintEnd_toStartOf="@+id/boxBatalhaLeonidas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <Button
        android:id="@+id/btBatalhaProximoTurno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="Atacar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btBatalhaIniciar"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <CheckBox
        android:id="@+id/boxBatalhaLeonidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="Leonidas"
        app:layout_constraintEnd_toStartOf="@+id/boxBatalhaGK"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/boxBatalhaAtila"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <ProgressBar
        android:id="@+id/barGuerreiro1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaGuerreiro1" />

    <CheckBox
        android:id="@+id/boxBatalhaGK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="Genghis Khan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/boxBatalhaLeonidas"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <Button
        android:id="@+id/btBatalhaIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="Carregar a Batalha"
        app:layout_constraintEnd_toStartOf="@+id/btBatalhaProximoTurno"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <TextView
        android:id="@+id/txtBatalhaGuerreiro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="244dp"
        android:text="Guerreiro 1"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <TextView
        android:id="@+id/txtBatalhaGuerreiro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="5dp"
        android:text="Guerreiro 2"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <TextView
        android:id="@+id/txtBatalhaVs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="244dp"
        android:text="Vs"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo" />

    <TextView
        android:id="@+id/txtBatalhaMensagens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="345dp"
        android:layout_height="130dp"
        android:layout_marginTop="304dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBatalhaTitulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtBatalhaResultadoG1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Histórico de batalha" />

                <TextView
                    android:id="@+id/txtBatalhaResultadoMeio"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtBatalhaResultadoG2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Histórico de batalha" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>